{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2020",
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ],
        "paths": {
            "@cyberrangecz-platform/visualization-dashboard/dashboard": [
                "./dashboard/src/public_api.ts"
            ],
            "@cyberrangecz-platform/visualization-dashboard/internal": [
                "./internal/src/public_api.ts"
            ]
        }
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
